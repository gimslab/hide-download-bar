{
  "manifest_version": 2,

  "name": "Hide Download Bar",
  "description": "Hide Download Bar",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Hide Download Bar"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      }
    }
  },

  "permissions": [
    "downloads",
    "downloads.shelf"
  ]
}
