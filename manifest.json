{
  "manifest_version": 3,

  "name": "Hide Download Bar",
  "description": "Hide Download Bar",
  "version": "0.2",

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Hide Download Bar"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Alt+Shift+H"
      }
    }
  },

  "permissions": [
    "downloads",
    "downloads.shelf"
  ]
}
